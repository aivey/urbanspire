<script src="/dropdown/dropdown.js"></script>
<script src="/accordion/accordion.js"></script>
<link rel="stylesheet" type="text/css" href="/dropdown/dropdown.css">
<link rel="stylesheet" type="text/css" href="/accordion/accordion.css">



<div class="ui top fixed menu">
	<div class = "header">
		<div id="logo_div">
			<a href = "home">
				<img style = "width: 100%; height: 100%" src = "images/logo.jpg">
		</div>
	</div>
  	<a class = "ui header" id = "name" href = "home">UrbanSpire</a>

  	<% if (!user) { %>
		<div class="ui secondary pointing right menu" id = "nav_bar">
		  	<a id="homeMenu" href = "home" class="item">
		    	Home
		  	</a>
		  	<a id="learnMenu" href = "learn" class="item">
		    	Learn
		  	</a>
		  	<a id="teachMenu" href = "teach" class="item">
		    	Teach
		  	</a>
		  	<a id="loginMenu" class="item">
		    	Login
		  	</a>
		</div>
		<div class="blackout">
		</div>
		<div class="msgbox">
		<center>
		  <div class="ui card">
		    
		    <div class="content">
		      <form class="ui form" action="/login" method="post">
		        <div class="field">
		          <input type="text" name="email" placeholder="Email">
		        </div>
		        <div class="field">

		          <input type="password" name="password" placeholder="Password">
		        </div>
		        <button class="ui orange button" type="submit" style="width: 100%;">Log in</button>
		      </form>
		    </div>
		    <div class="extra content">
		      <text>Don't have an account? </text>
		      <a class="ui tiny button" style="float: right;" id="signup">Sign up</a>
		    </div>
		  </div>
		</center>
		</div>
		<div class="msgbox2">
		<center>
		  <div class="ui card">
		        
		        <div class="content">
		          <form class="ui form" action="/signup" method="post" >
		            <div class="field">
		              <input type="text" name="firstname" placeholder="First Name">
		            </div>
		            <div class="field">
		              <input type="text" name="lastname" placeholder="Last Name">
		            </div>
		              <div class="field">
		                <input type="text" name="phone" placeholder="(xxx)-xxx-xxxx">
		              </div>
		            <div class="field">
		              <input type="text" name="email" placeholder="Email">
		            </div>
		            <div class="field">
		              <textarea rows="4" name="description" placeholder="Tell us a bit about yourself here!"></textarea>
		            </div>
		            <div class="field">
		  
		              <input type="text" name="password" placeholder="Password">
		            </div>
		            <button class="ui orange button" type="submit_signup" style="width: 100%;">Sign up</button>
		          </form>
		        </div>
		        
		      </div>
		</center>
		</div>
	<% } else { %>
		<div class="ui secondary pointing right menu" id = "nav_bar_space">
		  	<a id="homeMenu" href = "home" class="item">
		    	Home
		  	</a>
		  	<a id="learnMenu" href = "learn" class="item">
		    	Learn
		  	</a>
		  	<a id="teachMenu" href = "teach" class="item">
		    	Teach
		  	</a>
		</div>
		<div class = "profile_divider">
		    <div class="ui inline floating dropdown" id = "profile_dropdown">
		      <input type="hidden">
			    <div class="text">
					<img class="ui circular massive image" id = "profile_icon" src=<%= user.image %>>
			    </div>
			    <i class="dropdown icon orange"></i>
			    <div class="menu">
			      	<a href = "my_classes">
			      		<div class="item">
			       			My Classes
			      		</div>
			      	</a>
			      	<a href = "my_teachings">
			      		<div class="item">
			        		My Teachings
			      		</div>
			      	</a>
			      	<a href = "profile">
			      		<div class="item">
			        		My Profile
			      		</div>
			    	</a>
			    	<a href = "logout">
				      	<div class="item">
				       		Logout
				      	</div>
			      	</a>
			    </div>
		    </div>
		</div>
	<% } %>
</div>


